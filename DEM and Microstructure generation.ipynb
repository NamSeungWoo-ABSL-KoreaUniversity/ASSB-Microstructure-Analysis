    "    dxf_final_micro_filename = None\n",
    "\n",
    "txt_path = OUT_DIR / \"step2_final_fractions.txt\"\n",
    "with open(txt_path, \"w\", encoding=\"utf-8\") as f:\n",
    "    f.write(\"===== Final Fractions (Step 2) =====\\n\")\n",
