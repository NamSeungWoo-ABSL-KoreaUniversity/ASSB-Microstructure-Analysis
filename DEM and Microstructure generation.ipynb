    "\n",
    "STAGE_PLOT_MODE   = \"intermediate\"  # 'none'|'intermediate'|'all'\n",
    "ALLOW_SE_REUSE    = False           \n",
    "SUPER_SAMPLE_VIS  = 32\n",
    "PIX_PER_UM_VIS    = float(globals().get('PIX_PER_UM', 6.0))  \n",
